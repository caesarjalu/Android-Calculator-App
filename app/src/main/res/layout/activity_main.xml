<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/calculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="250-500"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/result"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-250"
            android:textColor="@android:color/black"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FCFCFC"
        android:backgroundTint="#FCFCFC"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:elevation="32dp"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="16dp">

        <Button
            android:id="@+id/C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:text="C"
            android:textColor="@color/design_default_color_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:text="%"
            android:textColor="@color/design_default_color_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@id/C"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:src="@drawable/ic_baseline_backspace_24"
            android:background="@android:color/transparent"
            android:textColor="@color/design_default_color_primary"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@id/percent"
            app:layout_constraintTop_toTopOf="Delete"
            app:layout_constraintWidth_percent="0.25"/>

        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="/"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/design_default_color_primary"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@id/delete"
            app:layout_constraintTop_toTopOf="/"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/C"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/percent"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/delete"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/times"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="*"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/design_default_color_primary"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/nine"
            app:layout_constraintTop_toBottomOf="@+id/divide"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/eight"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/design_default_color_primary"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/times"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/one"
            app:layout_constraintTop_toBottomOf="@+id/five"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/six"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/design_default_color_primary"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintTop_toBottomOf="@+id/minus"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="."
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/one"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/dot"
            app:layout_constraintTop_toBottomOf="@+id/two"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/tripleZero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/zero"
            app:layout_constraintTop_toBottomOf="@+id/three"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_button"
            android:text="="
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toEndOf="@+id/tripleZero"
            app:layout_constraintTop_toBottomOf="@+id/plus"
            app:layout_constraintWidth_percent="0.25" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>